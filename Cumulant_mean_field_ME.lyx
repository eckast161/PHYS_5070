\begin{align}
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\partial_{t}\hat{\rho}\right) & ={\rm Tr}\left(\!\hat{\sigma}_{i}^{\alpha}\!\left(\!-\frac{{\rm i}}{\hbar}\left[\hat{H}_{{\rm S}},\hat{\rho}\right]-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\hat{\rho}-2\left(\gamma_{-}\!-\gamma_{+}\right)\sum_{i}\left\{ \hat{\rho},\hat{\sigma}_{i}^{z}\right\} +\sum_{i,\eta}2\gamma_{\eta}\hat{A}_{i}^{\eta}\hat{\rho}\hat{A}_{i}^{\dagger\eta}\!\right)\!\right)\\
 & =-\frac{{\rm i}}{\hbar}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left[\hat{H}_{{\rm S}},\hat{\rho}\right]\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle -2\left(\gamma_{-}-\gamma_{+}\right)\sum_{j}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right)\\
 & \,\,\,\,\,+\sum_{j,\eta}2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right),\\
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right) & ={\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\rho}\hat{\sigma}_{j}^{z}+\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\\
 & ={\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\\
 & =\delta_{ij}\left({\rm Tr}\left(\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\hat{\rho}\right)\right)+(1-\delta_{ij})\left({\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\right)\\
 & =\delta_{ij}\left({\rm Tr}\left(\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}_{i}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\hat{\rho}_{i}\right)\right)+2(1-\delta_{ij}){\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\rho}_{j}\right){\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\rho}_{i}\right),\\
{\rm Tr}\left(\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}_{i}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\hat{\rho}_{i}\right) & =2\delta_{z\alpha},\\
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right) & =2\delta_{ij}\delta_{z\alpha}+2(1-\delta_{ij})\left\langle \hat{\sigma}_{j}^{z}\right\rangle \left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle ,\\
\sum_{j}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right) & =\sum_{j}\left(\delta_{ij}\delta_{z\alpha}+2(1-\delta_{ij})\left\langle \hat{\sigma}_{j}^{z}\right\rangle \left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle \right)\\
 & =\delta_{z\alpha}-2\left\langle \hat{\sigma}_{i}^{z}\right\rangle \left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle +2\left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle \sum_{j}\left\langle \hat{\sigma}_{j}^{z}\right\rangle \\
 & =\delta_{z\alpha}-2\left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle \left(\left\langle \hat{\sigma}_{i}^{z}\right\rangle -\sum_{j}\left\langle \hat{\sigma}_{j}^{z}\right\rangle \right),\\
2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right) & =2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{j}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\right)\\
 & =\left(1-\delta_{ij}\right)2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{j}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\right)+\delta_{ij}2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{j}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\right)\\
 & =\left(1-\delta_{ij}\right)2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\hat{\rho}_{j}\right){\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\rho}_{i}\right)+\delta_{ij}2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{i}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{\eta}\hat{\rho}_{i}\right),\\
{\rm Tr}\left(\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\hat{\rho}_{j}\right) & =\delta_{+\eta}{\rm Tr}\left(2\left(\hat{\mathbb{I}}+\hat{\sigma}_{j}^{z}\right)\hat{\rho}_{j}\right)+\delta_{-\eta}{\rm Tr}\left(2\left(\hat{\mathbb{I}}-\hat{\sigma}_{j}^{z}\right)\hat{\rho}_{j}\right)+\delta_{z\eta}{\rm Tr}\left(\hat{\mathbb{I}}\hat{\rho}_{j}\right)\\
 & =2\delta_{+\eta}{\rm Tr}\left(\left(\hat{\mathbb{I}}+\hat{\sigma}_{j}^{z}\right)\hat{\rho}_{j}\right)+2\delta_{-\eta}{\rm Tr}\left(\left(\hat{\mathbb{I}}-\hat{\sigma}_{j}^{z}\right)\hat{\rho}_{j}\right)+\delta_{z\eta}{\rm Tr}\left(\hat{\mathbb{I}}\hat{\rho}_{j}\right)\\
 & =2\delta_{+\eta}+2\delta_{-\eta}+\delta_{z\eta}+2\left(\delta_{+\eta}-\delta_{-\eta}\right)\left\langle \hat{\sigma}_{j}^{z}\right\rangle \\
 & =2\delta_{+\eta}+2\delta_{-\eta}+2\delta_{z\eta}-\delta_{z\eta}+2\left(\delta_{+\eta}-\delta_{-\eta}\right)\left\langle \hat{\sigma}_{j}^{z}\right\rangle \\
 & =2-\delta_{z\eta}+2\left(\delta_{+\eta}-\delta_{-\eta}\right)\left\langle \hat{\sigma}_{j}^{z}\right\rangle ,\\
{\rm Tr}\left(\hat{A}_{i}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{\eta}\hat{\rho}_{i}\right) & =\delta_{+\eta}{\rm Tr}\left(\hat{A}_{i}^{\dagger+}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{+}\hat{\rho}_{i}\right)+\delta_{-\eta}{\rm Tr}\left(\hat{A}_{i}^{\dagger-}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{-}\hat{\rho}_{i}\right)+\delta_{z\eta}{\rm Tr}\left(\hat{A}_{i}^{\dagger z}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{z}\hat{\rho}_{i}\right),\\
\left(\sigma_{i}^{\pm}\right)^{2} & =0,\\
{\rm Tr}\left(\hat{A}_{i}^{\dagger+}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{+}\hat{\rho}_{i}\right) & =\delta_{+\alpha}{\rm Tr}\left(\hat{A}_{i}^{\dagger+}\hat{\sigma}_{i}^{+}\hat{A}_{i}^{+}\hat{\rho}_{i}\right)+\delta_{-\alpha}{\rm Tr}\left(\hat{A}_{i}^{\dagger+}\hat{\sigma}_{i}^{-}\hat{A}_{i}^{+}\hat{\rho}_{i}\right)+\delta_{z\alpha}{\rm Tr}\left(\hat{A}_{i}^{\dagger+}\hat{\sigma}_{i}^{z}\hat{A}_{i}^{+}\hat{\rho}_{i}\right)\\
