 Additionally, we truncate at 3rd order such that the following approximation
 is plausible by the cumulant expansion:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\left\langle \hat{\sigma}_{a}^{\alpha}\hat{\sigma}_{b}^{\beta}\hat{\sigma}_{c}^{\gamma}\right\rangle  & \approx\left\langle \hat{\sigma}_{a}^{\alpha}\right\rangle \left\langle \hat{\sigma}_{b}^{\beta}\hat{\sigma}_{c}^{\gamma}\right\rangle +\left\langle \hat{\sigma}_{b}^{\beta}\right\rangle \left\langle \hat{\sigma}_{c}^{\gamma}\hat{\sigma}_{a}^{\alpha}\right\rangle +\left\langle \hat{\sigma}_{c}^{\gamma}\right\rangle \left\langle \hat{\sigma}_{a}^{\alpha}\hat{\sigma}_{b}^{\beta}\right\rangle -2\left\langle \hat{\sigma}_{a}^{\alpha}\right\rangle \left\langle \hat{\sigma}_{b}^{\beta}\right\rangle \left\langle \hat{\sigma}_{c}^{\gamma}\right\rangle .
\end{align}

\end_inset


\end_layout

\begin_layout Standard
in the case where 
\begin_inset Formula $a$
\end_inset

, 
\begin_inset Formula $b$
\end_inset

 and 
\begin_inset Formula $c$
\end_inset

 are distinct.
 With this in mind we will get the set of equations needed, at first for
 one-operator:
\end_layout

\begin_layout Standard

\size small
\begin_inset Formula 
\begin{align}
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\partial_{t}\hat{\rho}\right) & ={\rm Tr}\left(\!\hat{\sigma}_{i}^{\alpha}\!\left(\!-\frac{{\rm i}}{\hbar}\left[\hat{H}_{{\rm S}},\hat{\rho}\right]-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\hat{\rho}-2\left(\gamma_{-}\!-\gamma_{+}\right)\sum_{i}\left\{ \hat{\rho},\hat{\sigma}_{i}^{z}\right\} +\sum_{i,\eta}2\gamma_{\eta}\hat{A}_{i}^{\eta}\hat{\rho}\hat{A}_{i}^{\dagger\eta}\!\right)\!\right)\\
 & =-\frac{{\rm i}}{\hbar}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left[\hat{H}_{{\rm S}},\hat{\rho}\right]\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{i}^{\alpha}\right\rangle -2\left(\gamma_{-}-\gamma_{+}\right)\sum_{j}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right)\\
 & \,\,\,\,\,+\sum_{j,\eta}2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right),\\
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right) & ={\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\rho}\hat{\sigma}_{j}^{z}+\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\\
 & ={\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\\
 & =\delta_{ij}\left({\rm Tr}\left(\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\hat{\rho}\right)\right)+\left(1-\delta_{ij}\right)\left({\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\right),\\
\sum_{j}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left\{ \hat{\rho},\hat{\sigma}_{j}^{z}\right\} \right) & =\left({\rm Tr}\left(\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\hat{\rho}\right)\right)+\sum_{j\neq i}\left({\rm Tr}\left(\hat{\sigma}_{j}^{z}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)+{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\hat{\rho}\right)\right)\\
 & =\left\langle \hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{i}^{z}\right\rangle +\left\langle \hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{\alpha}\right\rangle +2\sum_{j\neq i}\left\langle \hat{\sigma}_{i}^{\alpha}\hat{\sigma}_{j}^{z}\right\rangle ,\\
2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right) & =2\gamma_{\eta}\left(\delta_{ij}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{\eta}\hat{\rho}\hat{A}_{i}^{\dagger\eta}\right)+\left(1-\delta_{ij}\right){\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right)\right)\\
 & =2\gamma_{\eta}\left(\delta_{ij}{\rm Tr}\left(\hat{A}_{i}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{\eta}\hat{\rho}\right)+\left(1-\delta_{ij}\right){\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\hat{\rho}\right)\right),\\
\sum_{j,\eta}2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\eta}\hat{\rho}\hat{A}_{j}^{\dagger\eta}\right) & =\sum_{\eta}2\gamma_{\eta}{\rm Tr}\left(\hat{A}_{i}^{\dagger\eta}\hat{\sigma}_{i}^{\alpha}\hat{A}_{i}^{\eta}\hat{\rho}\right)+\sum_{j\neq i,\eta}2\gamma_{\eta}{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\hat{\rho}\right),\\
{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\left[\hat{H}_{{\rm S}},\hat{\rho}\right]\right) & ={\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{H}_{{\rm S}}\hat{\rho}-\hat{\sigma}_{i}^{\alpha}\hat{\rho}\hat{H}_{{\rm S}}\right)
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
 & ={\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{H}_{{\rm S}}\hat{\rho}\right)-{\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{\rho}\hat{H}_{{\rm S}}\right)\\
 & ={\rm Tr}\left(\hat{\sigma}_{i}^{\alpha}\hat{H}_{{\rm S}}\hat{\rho}\right)-{\rm Tr}\left(\hat{H}_{{\rm S}}\hat{\sigma}_{i}^{\alpha}\hat{\rho}\right)\\
 & ={\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{H}_{{\rm S}}\right]\hat{\rho}\right)\\
 & ={\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\sum_{j}\overrightarrow{h_{j}}\cdot\overrightarrow{\hat{\sigma}_{j}}+\sum_{jk\beta\varepsilon}A_{jk}^{\beta\varepsilon}\hat{\sigma}_{j}^{\beta}\hat{\sigma}_{k}^{\varepsilon}\right]\hat{\rho}\right)\\
 & =\sum_{j}\overrightarrow{h_{j}}\cdot{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\overrightarrow{\hat{\sigma}_{j}}\right]\hat{\rho}\right)+\sum_{jk\beta\varepsilon}A_{jk}^{\beta\varepsilon}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{j}^{\beta}\hat{\sigma}_{k}^{\varepsilon}\right]\hat{\rho}\right)\\
 & =\sum_{j\beta}h_{j\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{j}^{\beta}\right]\hat{\rho}\right)+\sum_{jk\beta\varepsilon}A_{jk}^{\beta\varepsilon}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{j}^{\beta}\hat{\sigma}_{k}^{\varepsilon}\right]\hat{\rho}\right),\\
h_{j\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{j}^{\beta}\right]\hat{\rho}\right) & =\delta_{ij}h_{i\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{i}^{\beta}\right]\hat{\rho}\right)+\left(1-\delta_{ij}\right)h_{j\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{j}^{\beta}\right]\hat{\rho}\right)\\
 & =\delta_{ij}h_{i\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{i}^{\beta}\right]\hat{\rho}\right),\\
\sum_{j\beta}\overrightarrow{h_{j}}\cdot{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\overrightarrow{\hat{\sigma}_{j}}\right]\hat{\rho}\right) & =\sum_{j\beta}\delta_{ij}h_{i\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{i}^{\beta}\right]\hat{\rho}\right)\\
 & =\sum_{\beta}h_{i\beta}{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\hat{\sigma}_{i}^{\beta}\right]\hat{\rho}\right)\\
 & =\overrightarrow{h}_{i}\cdot{\rm Tr}\left(\left[\hat{\sigma}_{i}^{\alpha},\left(\hat{\sigma}_{i}^{x},\hat{\sigma}_{i}^{y},\hat{\sigma}_{i}^{z}\right)\right]\hat{\rho}\right).
\end{align}

\end_inset


\end_layout

