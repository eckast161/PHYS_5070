\sum_{\gamma\delta}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{\gamma}\right\rangle  & =\sum_{\gamma\delta}A_{ja}^{\gamma\delta}\left\langle \hat{\sigma}_{j}^{\gamma}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\right\rangle \\
 & =A_{ja}^{xx}\left\langle \hat{\sigma}_{j}^{x}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xy}\left\langle \hat{\sigma}_{j}^{x}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xz}\left\langle \hat{\sigma}_{j}^{x}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right]\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{yx}\left\langle \hat{\sigma}_{j}^{y}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yy}\left\langle \hat{\sigma}_{j}^{y}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yz}\left\langle \hat{\sigma}_{j}^{y}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right]\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{zx}\left\langle \hat{\sigma}_{j}^{z}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{zy}\left\langle \hat{\sigma}_{j}^{z}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{zz}\left\langle \hat{\sigma}_{j}^{z}\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right]\hat{\sigma}_{b}^{-}\right\rangle \\
 & =A_{ja}^{xx}\left\langle \hat{\sigma}_{j}^{x}2\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xy}\left\langle \hat{\sigma}_{j}^{x}2{\rm i}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xz}\left\langle \hat{\sigma}_{j}^{x}\left(-2\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{yx}\left\langle \hat{\sigma}_{j}^{y}2\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yy}\left\langle \hat{\sigma}_{j}^{y}2{\rm i}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yz}\left\langle \hat{\sigma}_{j}^{y}\left(-2\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{zx}\left\langle \hat{\sigma}_{j}^{z}2\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{zy}\left\langle \hat{\sigma}_{j}^{z}2{\rm i}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{zz}\left\langle \hat{\sigma}_{j}^{z}\left(-2\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle \\
 & =A_{ja}^{xx}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xy}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right){\rm i}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{xz}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\left(-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{yx}\left\langle {\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yy}\left\langle {\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right){\rm i}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +A_{ja}^{yz}\left\langle {\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\left(-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+2A_{ja}^{zx}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +2{\rm i}A_{ja}^{zy}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle -2A_{ja}^{zz}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =A_{ja}^{xx}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +{\rm i}A_{ja}^{xy}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle -A_{ja}^{xz}\left\langle \left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+{\rm i}A_{ja}^{yx}\left\langle \left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle -A_{ja}^{yy}\left\langle \left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle -{\rm i}A_{ja}^{yz}\left\langle \left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+2A_{ja}^{zx}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle +2{\rm i}A_{ja}^{zy}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle -2A_{ja}^{zz}\left\langle \hat{\sigma}_{j}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =\left(A_{ja}^{xx}+A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}-A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle +\left(A_{ja}^{xx}-A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}+A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle \\
 & \,\,\,\,\,\,-\left(A_{ja}^{xz}-{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle -\left(A_{ja}^{xz}+{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle +2\left(A_{ja}^{zx}+{\rm i}A_{ja}^{zy}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,-2A_{ja}^{zz}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle ,\\
\sum_{\gamma\delta}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle  & =\sum_{\gamma\delta}A_{bj}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\right\rangle \\
 & =A_{bj}^{xx}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{x}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{xy}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{x}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{xz}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{x}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{bj}^{yx}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{y}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{yy}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{y}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{yz}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{y}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{bj}^{zx}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{z}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{zy}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{z}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{zz}\left\langle \left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{z}\right]\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & =A_{bj}^{xx}\left\langle -2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{xy}\left\langle -2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{xz}\left\langle -2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{bj}^{yx}\left\langle 2{\rm i}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{yy}\left\langle 2{\rm i}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{yz}\left\langle 2{\rm i}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{bj}^{zx}\left\langle 2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{x}\right\rangle +A_{bj}^{zy}\left\langle 2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{y}\right\rangle +A_{bj}^{zz}\left\langle 2\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & =-A_{bj}^{xx}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle -A_{bj}^{xy}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}{\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle -2A_{bj}^{xz}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+{\rm i}A_{bj}^{yx}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle -A_{bj}^{yy}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle +2{\rm i}A_{bj}^{yz}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{bj}^{zx}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle +A_{bj}^{zy}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}{\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\right\rangle +2A_{bj}^{zz}\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & =\left(-A_{bj}^{xx}+{\rm i}A_{bj}^{xy}+{\rm i}A_{bj}^{yx}+A_{bj}^{yy}+A_{bj}^{zx}-{\rm i}A_{bj}^{zy}\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{+}\right\rangle +\left(-A_{bj}^{xx}-{\rm i}A_{bj}^{xy}+{\rm i}A_{bj}^{yx}-A_{bj}^{yy}+A_{bj}^{zx}+{\rm i}A_{bj}^{zy}\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{-}\right\rangle \\
 & \,\,\,\,\,\,+2\left(-A_{bj}^{xz}+{\rm i}A_{bj}^{yz}+A_{bj}^{zz}\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle .
\end{align}

