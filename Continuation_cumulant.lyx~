\left\{ \hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right\}  & =0,\\
\left\{ \hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right\}  & =0,\\
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{+}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle -4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+\sum_{\eta}2\gamma_{\eta}\left(\left\langle \hat{A}_{a}^{\dagger\eta}\hat{\sigma}_{a}^{+}\hat{A}_{a}^{\eta}\hat{\sigma}_{b}^{-}\right\rangle +\left\langle \hat{\sigma}_{a}^{+}\hat{A}_{b}^{\dagger\eta}\hat{\sigma}_{b}^{-}\hat{A}_{b}^{\eta}\right\rangle +\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\right\rangle \right),\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{A}_{a}^{\dagger\eta}\hat{\sigma}_{a}^{+}\hat{A}_{a}^{\eta}\hat{\sigma}_{b}^{-}\right\rangle  & =2\gamma_{+}\left\langle \hat{A}_{a}^{\dagger+}\hat{\sigma}_{a}^{+}\hat{A}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +2\gamma_{-}\left\langle \hat{A}_{a}^{\dagger-}\hat{\sigma}_{a}^{+}\hat{A}_{a}^{-}\hat{\sigma}_{b}^{-}\right\rangle +2\gamma_{z}\left\langle \hat{A}_{a}^{\dagger z}\hat{\sigma}_{a}^{+}\hat{A}_{a}^{z}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =-2\gamma_{z}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle ,\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{\sigma}_{a}^{+}\hat{A}_{b}^{\dagger\eta}\hat{\sigma}_{b}^{-}\hat{A}_{b}^{\eta}\right\rangle  & =-2\gamma_{z}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle ,\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\right\rangle  & =2\gamma_{+}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}2\left(\mathbb{I}-\hat{\sigma}_{j}^{z}\right)\right\rangle +2\gamma_{-}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}2\left(\mathbb{I}+\hat{\sigma}_{j}^{z}\right)\right\rangle +2\gamma_{z}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =4\left(\gamma_{-}-\gamma_{\text{+}}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle +2\left(2\gamma_{+}+2\gamma_{-}+\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{+}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle -4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,-4\gamma_{z}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle +2\left(N-2\right)\left(2\gamma_{+}+2\gamma_{-}+\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{+}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle -4\gamma_{z}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & \,\,\,\,\,\,+2\left(N-2\right)\left(2\gamma_{+}+2\gamma_{-}+\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{-}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{+}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-8\left(\gamma_{z}+\gamma_{+}+\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle \\
 & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\left(2\left(-{\rm i}\left(A_{aa}^{xy}-A_{aa}^{yx}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +\left(A_{aa}^{xz}-A_{aa}^{zx}+{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ^{*}\right)\right.\right.\\
 & \,\,\,\,\,\,+2\left({\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +\left(A_{bb}^{xz}-A_{bb}^{zx}+{\rm i}\left(A_{bb}^{zy}-A_{bb}^{yz}\right)\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{z}\right\rangle \right)+2\left(A_{ba}^{xx}+A_{ba}^{yy}+{\rm i}\left(A_{ba}^{xy}-A_{ba}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\right\rangle -2\left(A_{ba}^{xx}+A_{ba}^{yy}+{\rm i}\left(A_{ba}^{xy}-A_{ba}^{yx}\right)\right)\left\langle \hat{\sigma}_{b}^{z}\right\rangle \\
 & \,\,\,\,\,\,\left.-2\left(A_{ba}^{xz}-{\rm i}A_{ba}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\right\rangle +2\left(A_{ba}^{zx}+{\rm i}A_{ba}^{zy}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle ^{*}\right)+\Theta_{3}\left(N\right)\sum_{j\neq a,b}\left(\left(A_{ja}^{xx}+A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}-A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle +\left(A_{ja}^{xx}-A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}+A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle \right.\\
 & \,\,\,\,\,\,-\left(A_{ja}^{xz}-{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle -\left(A_{ja}^{xz}+{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle +2\left(A_{ja}^{zx}+{\rm i}A_{ja}^{zy}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle -2A_{ja}^{zz}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle +\left(-A_{bj}^{xx}+A_{bj}^{yy}+A_{bj}^{zx}+{\rm i}\left(A_{bj}^{xy}+A_{bj}^{yx}-A_{bj}^{zy}\right)\right)\\
 & \,\,\,\,\,\,\left.\left.\times\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{+}\right\rangle +\left(-A_{bj}^{xx}-A_{bj}^{yy}+A_{bj}^{zx}+{\rm i}\left(-A_{bj}^{xy}+A_{bj}^{yx}+A_{bj}^{zy}\right)\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{-}\right\rangle +2\left(A_{bj}^{zz}-A_{bj}^{xz}+{\rm i}A_{bj}^{yz}\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \right)\right)-8\left(\gamma_{z}+\gamma_{+}+\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle .
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Summarizing we have:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(2\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{z},{\rm i}\hat{\sigma}_{a}^{z},-\hat{\sigma}_{a}^{+}\right)\hat{\sigma}_{b}^{-}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{+}\left(-\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{-}\right)\right\rangle +\Theta_{2}\left(N\right)\left(2\left(-{\rm i}\left(A_{aa}^{xy}-A_{aa}^{yx}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +\left(A_{aa}^{xz}-A_{aa}^{zx}+{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ^{*}\right)\right.\right.\\
 & \,\,\,\,\,\,+2\left({\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle +\left(A_{bb}^{xz}-A_{bb}^{zx}+{\rm i}\left(A_{bb}^{zy}-A_{bb}^{yz}\right)\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{z}\right\rangle \right)+2\left(A_{ba}^{xx}+A_{ba}^{yy}+{\rm i}\left(A_{ba}^{xy}-A_{ba}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\right\rangle -2\left(A_{ba}^{xx}+A_{ba}^{yy}+{\rm i}\left(A_{ba}^{xy}-A_{ba}^{yx}\right)\right)\left\langle \hat{\sigma}_{b}^{z}\right\rangle \\
 & \,\,\,\,\,\,\left.-2\left(A_{ba}^{xz}-{\rm i}A_{ba}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\right\rangle +2\left(A_{ba}^{zx}+{\rm i}A_{ba}^{zy}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle ^{*}\right)+\Theta_{3}\left(N\right)\sum_{j\neq a,b}\left(\left(A_{ja}^{xx}+A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}-A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle +\left(A_{ja}^{xx}-A_{ja}^{yy}+{\rm i}\left(A_{ja}^{xy}+A_{ja}^{yx}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle \right.\\
 & \,\,\,\,\,\,-\left(A_{ja}^{xz}-{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{+}\right\rangle -\left(A_{ja}^{xz}+{\rm i}A_{ja}^{yz}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{-}\right\rangle +2\left(A_{ja}^{zx}+{\rm i}A_{ja}^{zy}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle -2A_{ja}^{zz}\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\hat{\sigma}_{j}^{z}\right\rangle +\left(-A_{bj}^{xx}+A_{bj}^{yy}+A_{bj}^{zx}+{\rm i}\left(A_{bj}^{xy}+A_{bj}^{yx}-A_{bj}^{zy}\right)\right)\\
 & \,\,\,\,\,\,\left.\left.\times\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{+}\right\rangle +\left(-A_{bj}^{xx}-A_{bj}^{yy}+A_{bj}^{zx}+{\rm i}\left(-A_{bj}^{xy}+A_{bj}^{yx}+A_{bj}^{zy}\right)\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{-}\right\rangle +2\left(A_{bj}^{zz}-A_{bj}^{xz}+{\rm i}A_{bj}^{yz}\right)\left\langle \hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{+}\hat{\sigma}_{j}^{z}\right\rangle \right)\right)-8\left(\gamma_{z}+\gamma_{+}+\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle .
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Now we deal with 
\begin_inset Formula $\partial_{t}\!\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle $
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(\overrightarrow{h_{a}}\cdot\left\langle \left[\hat{\sigma}_{a}^{z},\overrightarrow{\hat{\sigma}_{a}}\right]\hat{\sigma}_{b}^{+}\right\rangle +\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\overrightarrow{\hat{\sigma}_{b}}\right]\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle -2\left(\gamma_{-}-\gamma_{+}\right)\left(\left\langle \left\{ \hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{z}\right\} \hat{\sigma}_{b}^{+}\right\rangle \right.\\
 & \,\,\,\,\,\,\left.+\left\langle \hat{\sigma}_{a}^{z}\left\{ \hat{\sigma}_{b}^{z},\hat{\sigma}_{b}^{+}\right\} \right\rangle +2\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{z}\right\rangle \right)+\sum_{\eta}2\gamma_{\eta}\left(\left\langle \hat{A}_{a}^{\dagger\eta}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{\eta}\hat{\sigma}_{b}^{+}\right\rangle +\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger\eta}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{\eta}\right\rangle +\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\right\rangle \right),\\
\left[\hat{\sigma}_{a}^{z},\overrightarrow{\hat{\sigma}_{a}}\right] & =2{\rm i}\left({\rm i}\frac{-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},-\frac{\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},0\right)\\
 & ={\rm i}\left({\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right),-\left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right),0\right)\\
 & =\left(\hat{\sigma}_{j}^{+}-\hat{\sigma}_{j}^{-},-{\rm i}\left(\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right),0\right),\\
\left[\hat{\sigma}_{i}^{+},\overrightarrow{\hat{\sigma}_{i}}\right] & =\left(2\hat{\sigma}_{i}^{z},2{\rm i}\hat{\sigma}_{i}^{z},-2\hat{\sigma}_{i}^{+}\right)\\
 & =2\left(\hat{\sigma}_{i}^{z},{\rm i}\hat{\sigma}_{i}^{z},-\hat{\sigma}_{i}^{+}\right),\\
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(\overrightarrow{h_{a}}\cdot\left\langle \left[\hat{\sigma}_{a}^{z},\overrightarrow{\hat{\sigma}_{a}}\right]\hat{\sigma}_{b}^{+}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{z}\left(\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},-\hat{\sigma}_{b}^{+}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle -4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+\sum_{\eta}2\gamma_{\eta}\left(\left\langle \hat{A}_{a}^{\dagger\eta}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{\eta}\hat{\sigma}_{b}^{+}\right\rangle +\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger\eta}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{\eta}\right\rangle +\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\right\rangle \right),\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{A}_{a}^{\dagger\eta}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{\eta}\hat{\sigma}_{b}^{+}\right\rangle  & =2\gamma_{+}\left\langle \hat{A}_{a}^{\dagger+}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{+}\hat{\sigma}_{b}^{+}\right\rangle +2\gamma_{-}\left\langle \hat{A}_{a}^{\dagger-}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{-}\hat{\sigma}_{b}^{+}\right\rangle +2\gamma_{z}\left\langle \hat{A}_{a}^{\dagger z}\hat{\sigma}_{a}^{z}\hat{A}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =2\gamma_{+}\left\langle 2\left(\mathbb{I}-\hat{\sigma}_{a}^{z}\right)\hat{\sigma}_{b}^{+}\right\rangle +2\gamma_{-}\left\langle -2\left(\mathbb{I}+\hat{\sigma}_{a}^{z}\right)\hat{\sigma}_{b}^{+}\right\rangle +2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =4\left(\gamma_{+}-\gamma_{-}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle +\left(-4\gamma_{+}-4\gamma_{-}+2\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ,\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger\eta}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{\eta}\right\rangle  & =2\gamma_{+}\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger+}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{+}\right\rangle +2\gamma_{-}\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger-}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{-}\right\rangle +2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{A}_{b}^{\dagger z}\hat{\sigma}_{b}^{+}\hat{A}_{b}^{z}\right\rangle \\
 & =-2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ,\\
\sum_{\eta}2\gamma_{\eta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger\eta}\hat{A}_{j}^{\eta}\right\rangle  & =2\gamma_{+}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger+}\hat{A}_{j}^{+}\right\rangle +2\gamma_{-}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger-}\hat{A}_{j}^{-}\right\rangle +2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{A}_{j}^{\dagger z}\hat{A}_{j}^{z}\right\rangle \\
 & =2\gamma_{+}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}2\left(\mathbb{I}-\hat{\sigma}_{j}^{z}\right)\right\rangle +2\gamma_{-}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}2\left(\mathbb{I}+\hat{\sigma}_{j}^{z}\right)\right\rangle +2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =\left(4\gamma_{+}+4\gamma_{-}+2\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle +4\left(\gamma_{-}-\gamma_{+}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{z}\right\rangle ,\\
\partial_{t}\!\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle  & =-\frac{{\rm i}}{\hbar}\left(\overrightarrow{h_{a}}\cdot\left\langle \left[\hat{\sigma}_{a}^{z},\overrightarrow{\hat{\sigma}_{a}}\right]\hat{\sigma}_{b}^{+}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{z}\left(\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},-\hat{\sigma}_{b}^{+}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle -4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & \,\,\,\,\,\,+4\left(\gamma_{+}-\gamma_{-}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle +\left(-4\gamma_{+}-4\gamma_{-}+2\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle -2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle +\left(N-2\right)\left(4\gamma_{+}+4\gamma_{-}+2\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle +4\left(\gamma_{-}-\gamma_{+}\right)\sum_{j\neq a,b}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{z}\right\rangle \\
 & =-\frac{{\rm i}}{\hbar}\left(\overrightarrow{h_{a}}\cdot\left\langle \left[\hat{\sigma}_{a}^{z},\overrightarrow{\hat{\sigma}_{a}}\right]\hat{\sigma}_{b}^{+}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{z}\left(\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},-\hat{\sigma}_{b}^{+}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)-2N\left(\gamma_{z}+2\gamma_{+}+2\gamma_{-}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle +4\left(\gamma_{+}-\gamma_{-}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle \\
 & \,\,\,\,\,\,+\left(-4\gamma_{+}-4\gamma_{-}+2\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle -2\gamma_{z}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle +2\left(N-2\right)\left(2\gamma_{+}+2\gamma_{-}+\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =-\frac{{\rm i}}{\hbar}\left(\overrightarrow{h_{a}}\cdot\left\langle \left(\hat{\sigma}_{a}^{+}-\hat{\sigma}_{a}^{-},-{\rm i}\left(\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right),0\right)\hat{\sigma}_{b}^{+}\right\rangle +2\overrightarrow{h_{b}}\cdot\left\langle \hat{\sigma}_{a}^{z}\left(\hat{\sigma}_{b}^{z},{\rm i}\hat{\sigma}_{b}^{z},-\hat{\sigma}_{b}^{+}\right)\right\rangle +\Theta_{2}\left(N\right)\sum_{\gamma\delta}\left(A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle \right)\right.\\
 & \,\,\,\,\,\,\left.+\Theta_{3}\left(N\right)\sum_{\gamma\delta}\left(\sum_{j\neq a,b}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +\sum_{j\neq a,b}A_{bj}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{j}^{\delta}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\right]\right\rangle \right)\right)+4\left(\gamma_{+}-\gamma_{-}\right)\left\langle \hat{\sigma}_{b}^{+}\right\rangle -4\left(3\left(\gamma_{+}+\gamma_{-}\right)+\gamma_{z}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ,\\
\sum_{\gamma\delta}A_{aa}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle  & =A_{aa}^{xy}{\rm i}\epsilon_{xy\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{xz}{\rm i}\epsilon_{xz\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{yx}{\rm i}\epsilon_{yx\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{yz}{\rm i}\epsilon_{yz\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{zx}{\rm i}\epsilon_{zx\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{zy}{\rm i}\epsilon_{zy\zeta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\zeta}\right]\hat{\sigma}_{b}^{+}\right\rangle \\
 & =A_{aa}^{xy}{\rm i}\epsilon_{xyz}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{z}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{xz}{\rm i}\epsilon_{xzy}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{yx}{\rm i}\epsilon_{yxz}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{z}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{yz}{\rm i}\epsilon_{yzx}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{zx}{\rm i}\epsilon_{zxy}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{zy}{\rm i}\epsilon_{zyx}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{+}\right\rangle \\
 & =-A_{aa}^{xz}{\rm i}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{yz}{\rm i}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{+}\right\rangle +A_{aa}^{zx}{\rm i}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{+}\right\rangle -A_{aa}^{zy}{\rm i}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{+}\right\rangle \\
 & =-{\rm i}\left(A_{aa}^{xz}-A_{aa}^{zx}\right)\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{y}\right]\hat{\sigma}_{b}^{+}\right\rangle +{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{x}\right]\hat{\sigma}_{b}^{+}\right\rangle \\
 & ={\rm i}\left(A_{aa}^{xz}-A_{aa}^{zx}\right)\left\langle 2{\rm i}\hat{\sigma}_{a}^{x}\hat{\sigma}_{b}^{+}\right\rangle +{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\left\langle 2{\rm i}\hat{\sigma}_{a}^{y}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =-2\left(\left(A_{aa}^{xz}-A_{aa}^{zx}\right)\left\langle \frac{\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\hat{\sigma}_{b}^{+}\right\rangle +\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\left\langle {\rm i}\frac{-\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\hat{\sigma}_{b}^{+}\right\rangle \right)\\
 & =-\left(\left(A_{aa}^{xz}-A_{aa}^{zx}\right)\left\langle \left(\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right)\hat{\sigma}_{b}^{+}\right\rangle +\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\left\langle {\rm i}\left(-\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right)\hat{\sigma}_{b}^{+}\right\rangle \right)\\
 & =-\left(A_{aa}^{xz}-A_{aa}^{zx}-{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{+}\right\rangle -\left(A_{aa}^{xz}-A_{aa}^{zx}+{\rm i}\left(A_{aa}^{yz}-A_{aa}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{+}\hat{\sigma}_{b}^{-}\right\rangle ^{*},\\
\sum_{\gamma\delta}A_{bb}^{\gamma\delta}{\rm i}\epsilon_{\gamma\delta\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle  & =A_{bb}^{xy}{\rm i}\epsilon_{xy\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{bb}^{xz}{\rm i}\epsilon_{xz\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{bb}^{yx}{\rm i}\epsilon_{yx\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{bb}^{yz}{\rm i}\epsilon_{yz\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{bb}^{zx}{\rm i}\epsilon_{zx\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle +A_{bb}^{zy}{\rm i}\epsilon_{zy\zeta}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\zeta}\right]\right\rangle \\
 & =A_{bb}^{xy}{\rm i}\epsilon_{xyz}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{z}\right]\right\rangle +A_{bb}^{xz}{\rm i}\epsilon_{xzy}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right]\right\rangle +A_{bb}^{yx}{\rm i}\epsilon_{yxz}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{z}\right]\right\rangle +A_{bb}^{yz}{\rm i}\epsilon_{yzx}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{x}\right]\right\rangle +A_{bb}^{zx}{\rm i}\epsilon_{zxy}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right]\right\rangle +A_{bb}^{zy}{\rm i}\epsilon_{zyx}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{x}\right]\right\rangle \\
 & =A_{bb}^{xy}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{z}\right]\right\rangle -A_{bb}^{xz}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right]\right\rangle -A_{bb}^{yx}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{z}\right]\right\rangle +A_{bb}^{yz}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{x}\right]\right\rangle +A_{bb}^{zx}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right]\right\rangle -A_{bb}^{zy}{\rm i}\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{x}\right]\right\rangle \\
 & ={\rm i}\left(A_{bb}^{yz}-A_{bb}^{zy}\right)\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{x}\right]\right\rangle +{\rm i}\left(A_{bb}^{zx}-A_{bb}^{xz}\right)\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right]\right\rangle +{\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{z}\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{z}\right]\right\rangle \\
 & ={\rm i}\left(A_{bb}^{yz}-A_{bb}^{zy}\right)\left\langle \hat{\sigma}_{a}^{z}2\hat{\sigma}_{b}^{z}\right\rangle +{\rm i}\left(A_{bb}^{zx}-A_{bb}^{xz}\right)\left\langle \hat{\sigma}_{a}^{z}2{\rm i}\hat{\sigma}_{b}^{z}\right\rangle +{\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{z}\left(-2\hat{\sigma}_{b}^{+}\right)\right\rangle \\
 & =2\left({\rm i}^{2}\left(A_{bb}^{zx}-A_{bb}^{xz}\right)+{\rm i}\left(A_{bb}^{yz}-A_{bb}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{z}\right\rangle -2{\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =2\left(A_{bb}^{xz}-A_{bb}^{zx}+{\rm i}\left(A_{bb}^{yz}-A_{bb}^{zy}\right)\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{z}\right\rangle -2{\rm i}\left(A_{bb}^{xy}-A_{bb}^{yx}\right)\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle ,\\
\sum_{\gamma\delta}A_{ba}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\right]\right\rangle  & =\sum_{\gamma\delta}A_{ba}^{\gamma\delta}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}-\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{\delta}\hat{\sigma}_{a}^{z}\hat{\sigma}_{b}^{+}\right\rangle \\
 & =\sum_{\gamma\delta}A_{ba}^{\gamma\delta}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{\delta}-\hat{\sigma}_{b}^{\gamma}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{\delta}\hat{\sigma}_{a}^{z}\right\rangle \\
 & =A_{ba}^{xx}\left\langle \hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{x}-\hat{\sigma}_{b}^{x}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{x}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{xy}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{x}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{y}-\hat{\sigma}_{b}^{x}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{y}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{xz}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{x}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}-\hat{\sigma}_{b}^{x}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{ba}^{yx}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{y}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{x}-\hat{\sigma}_{b}^{y}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{x}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{yy}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{y}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{y}-\hat{\sigma}_{b}^{y}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{y}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{yz}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{y}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}-\hat{\sigma}_{b}^{y}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}\right\rangle \\
 & \,\,\,\,\,\,+A_{ba}^{zx}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{x}-\hat{\sigma}_{b}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{x}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{zy}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{y}-\hat{\sigma}_{b}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{y}\hat{\sigma}_{a}^{z}\right\rangle +A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{z}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}-\hat{\sigma}_{b}^{z}\hat{\sigma}_{b}^{+}\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{z}\right\rangle \\
 & =A_{ba}^{xx}\left\langle \left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right){\rm i}\hat{\sigma}_{a}^{y}-\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right)\left(-{\rm i}\hat{\sigma}_{a}^{y}\right)\right\rangle +A_{ba}^{xy}\left\langle \left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right)\left(-{\rm i}\hat{\sigma}_{a}^{x}\right)-\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right){\rm i}\hat{\sigma}_{a}^{x}\right\rangle +A_{ba}^{xz}\left\langle \left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right)-\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right)\right\rangle \\
 & \,\,\,\,\,\,+A_{ba}^{yx}\left\langle {\rm i}\left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right){\rm i}\hat{\sigma}_{a}^{y}-{\rm i}\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right)\left(-{\rm i}\hat{\sigma}_{a}^{y}\right)\right\rangle +A_{ba}^{yy}\left\langle {\rm i}\left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right)\left(-{\rm i}\hat{\sigma}_{a}^{x}\right)-{\rm i}\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right){\rm i}\hat{\sigma}_{a}^{x}\right\rangle +A_{ba}^{yz}\left\langle {\rm i}\left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right)-{\rm i}\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right)\right\rangle \\
 & \,\,\,\,\,\,+A_{ba}^{zx}\left\langle -\hat{\sigma}_{b}^{+}{\rm i}\hat{\sigma}_{a}^{y}-\hat{\sigma}_{b}^{+}\left(-{\rm i}\hat{\sigma}_{a}^{y}\right)\right\rangle +A_{ba}^{zy}\left\langle -\hat{\sigma}_{b}^{+}\left(-{\rm i}\hat{\sigma}_{a}^{x}\right)-\hat{\sigma}_{b}^{+}{\rm i}\hat{\sigma}_{a}^{x}\right\rangle +A_{ba}^{zz}\left\langle -\hat{\sigma}_{b}^{+}-\hat{\sigma}_{b}^{+}\right\rangle \\
 & =A_{ba}^{xx}\left\langle 2{\rm i}\hat{\sigma}_{a}^{y}\right\rangle +A_{ba}^{xy}\left\langle -2{\rm i}\hat{\sigma}_{a}^{x}\right\rangle +A_{ba}^{xz}\left\langle 2\hat{\sigma}_{b}^{z}\right\rangle +A_{ba}^{yx}\left\langle -2\hat{\sigma}_{a}^{y}\right\rangle +A_{ba}^{yy}\left\langle 2\hat{\sigma}_{a}^{x}\right\rangle +A_{ba}^{yz}\left\langle 2{\rm i}\hat{\sigma}_{b}^{z}\right\rangle +A_{ba}^{zz}\left\langle -\hat{\sigma}_{b}^{+}-\hat{\sigma}_{b}^{+}\right\rangle \\
 & =2{\rm i}A_{ba}^{xx}\left\langle \hat{\sigma}_{a}^{y}\right\rangle -2{\rm i}A_{ba}^{xy}\left\langle \hat{\sigma}_{a}^{x}\right\rangle +2A_{ba}^{xz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{yx}\left\langle \hat{\sigma}_{a}^{y}\right\rangle +2A_{ba}^{yy}\left\langle \hat{\sigma}_{a}^{x}\right\rangle +2{\rm i}A_{ba}^{yz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\right\rangle \\
 & =2{\rm i}A_{ba}^{xx}\left\langle {\rm i}\frac{-\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\right\rangle -2{\rm i}A_{ba}^{xy}\left\langle \frac{\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\right\rangle +2A_{ba}^{xz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{yx}\left\langle {\rm i}\frac{-\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\right\rangle +2A_{ba}^{yy}\left\langle \frac{\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}}{2}\right\rangle +2{\rm i}A_{ba}^{yz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\right\rangle \\
 & =-A_{ba}^{xx}\left\langle -\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle -{\rm i}A_{ba}^{xy}\left\langle \hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle +2A_{ba}^{xz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -{\rm i}A_{ba}^{yx}\left\langle -\hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle +A_{ba}^{yy}\left\langle \hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle +2{\rm i}A_{ba}^{yz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\right\rangle \\
 & =A_{ba}^{xx}\left\langle \hat{\sigma}_{a}^{+}-\hat{\sigma}_{a}^{-}\right\rangle -{\rm i}A_{ba}^{xy}\left\langle \hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle +2A_{ba}^{xz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle +{\rm i}A_{ba}^{yx}\left\langle \hat{\sigma}_{a}^{+}-\hat{\sigma}_{a}^{-}\right\rangle +A_{ba}^{yy}\left\langle \hat{\sigma}_{a}^{+}+\hat{\sigma}_{a}^{-}\right\rangle +2{\rm i}A_{ba}^{yz}\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\right\rangle \\
 & =\left(A_{ba}^{xx}-{\rm i}A_{ba}^{xy}+{\rm i}A_{ba}^{yx}+A_{ba}^{yy}\right)\left\langle \hat{\sigma}_{a}^{+}\right\rangle +\left(-A_{ba}^{xx}-{\rm i}A_{ba}^{xy}-{\rm i}A_{ba}^{yx}+A_{ba}^{yy}\right)\left\langle \hat{\sigma}_{a}^{+}\right\rangle ^{*}+2\left(A_{ba}^{xz}+{\rm i}A_{ba}^{yz}\right)\left\langle \hat{\sigma}_{b}^{z}\right\rangle -2A_{ba}^{zz}\left\langle \hat{\sigma}_{b}^{+}\right\rangle ,\\
\\
\sum_{\gamma\delta}A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle  & =A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle \\
 & \,\,\,\,\,\,+A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle +A_{ja}^{\gamma\delta}\left\langle \left[\hat{\sigma}_{a}^{z},\hat{\sigma}_{a}^{\delta}\right]\hat{\sigma}_{b}^{+}\hat{\sigma}_{j}^{\gamma}\right\rangle \\
\\
\\
\\
\\
\hat{\sigma}_{j}^{x} & =\frac{\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
\hat{\sigma}_{j}^{y} & ={\rm i}\frac{-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
2\hat{\sigma}_{j}^{y} & ={\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right),\\
2\hat{\sigma}_{j}^{x} & =\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\\
\\
\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{z}\right] & =2\hat{\sigma}_{b}^{-},\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{y}\right] & =2{\rm i}\hat{\sigma}_{b}^{z},\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{x}\right] & =-2\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{x} & =\mathbb{I}+\hat{\sigma}_{i}^{z},\\
\hat{\sigma}_{i}^{x}\hat{\sigma}_{i}^{+} & =\mathbb{I}-\hat{\sigma}_{i}^{z},\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{y} & ={\rm i}\left(\mathbb{I}+\hat{\sigma}_{i}^{z}\right),\\
\hat{\sigma}_{i}^{y}\hat{\sigma}_{i}^{+} & ={\rm i}\left(\mathbb{I}-\hat{\sigma}_{i}^{z}\right),\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{z} & =-\hat{\sigma}_{i}^{+},\\
\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{+} & =\hat{\sigma}_{i}^{+},\\
\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right] & =-2\hat{\sigma}_{a}^{+},\\
\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{+} & =\hat{\sigma}_{a}^{+},\\
\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{x}\right] & =2\hat{\sigma}_{a}^{z},\\
\hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{y} & ={\rm i}\left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right),\\
\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right] & =2{\rm i}\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{a}^{x}\hat{\sigma}_{a}^{+} & =\mathbb{I}-\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{a}^{y}\hat{\sigma}_{a}^{+} & ={\rm i}\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right),\\
\hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{z} & =-\hat{\sigma}_{b}^{+},\\
\hat{\sigma}_{j}^{x} & =\frac{\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
\hat{\sigma}_{j}^{y} & ={\rm i}\frac{-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
2\hat{\sigma}_{j}^{y} & ={\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\\
\hat{\sigma}_{i}^{x} & =\frac{\hat{\sigma}_{i}^{+}+\hat{\sigma}_{i}^{-}}{2},\\
\hat{\sigma}_{i}^{y} & ={\rm i}\frac{-\hat{\sigma}_{i}^{+}+\hat{\sigma}_{i}^{-}}{2},\\
\\
