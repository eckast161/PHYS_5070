\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\\
\hat{\sigma}_{j}^{x} & =\frac{\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
\hat{\sigma}_{j}^{y} & ={\rm i}\frac{-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
2\hat{\sigma}_{j}^{y} & ={\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right),\\
2\hat{\sigma}_{j}^{x} & =\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\\
\\
\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{z}\right] & =2\hat{\sigma}_{b}^{-},\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{y}\right] & =2{\rm i}\hat{\sigma}_{b}^{z},\\
\left[\hat{\sigma}_{b}^{-},\hat{\sigma}_{b}^{x}\right] & =-2\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{x} & =\mathbb{I}+\hat{\sigma}_{i}^{z},\\
\hat{\sigma}_{i}^{x}\hat{\sigma}_{i}^{+} & =\mathbb{I}-\hat{\sigma}_{i}^{z},\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{y} & ={\rm i}\left(\mathbb{I}+\hat{\sigma}_{i}^{z}\right),\\
\hat{\sigma}_{i}^{y}\hat{\sigma}_{i}^{+} & ={\rm i}\left(\mathbb{I}-\hat{\sigma}_{i}^{z}\right),\\
\hat{\sigma}_{i}^{+}\hat{\sigma}_{i}^{z} & =-\hat{\sigma}_{i}^{+},\\
\hat{\sigma}_{i}^{z}\hat{\sigma}_{i}^{+} & =\hat{\sigma}_{i}^{+},\\
\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{z}\right] & =-2\hat{\sigma}_{a}^{+},\\
\hat{\sigma}_{a}^{z}\hat{\sigma}_{a}^{+} & =\hat{\sigma}_{a}^{+},\\
\left[\hat{\sigma}_{a}^{+},\hat{\sigma}_{a}^{x}\right] & =2\hat{\sigma}_{a}^{z},\\
\hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{y} & ={\rm i}\left(\mathbb{I}+\hat{\sigma}_{b}^{z}\right),\\
\left[\hat{\sigma}_{b}^{+},\hat{\sigma}_{b}^{y}\right] & =2{\rm i}\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{a}^{x}\hat{\sigma}_{a}^{+} & =\mathbb{I}-\hat{\sigma}_{b}^{z},\\
\hat{\sigma}_{a}^{y}\hat{\sigma}_{a}^{+} & ={\rm i}\left(\mathbb{I}-\hat{\sigma}_{b}^{z}\right),\\
\hat{\sigma}_{b}^{+}\hat{\sigma}_{b}^{z} & =-\hat{\sigma}_{b}^{+},\\
\hat{\sigma}_{j}^{x} & =\frac{\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
\hat{\sigma}_{j}^{y} & ={\rm i}\frac{-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}}{2},\\
2\hat{\sigma}_{j}^{y} & ={\rm i}\left(-\hat{\sigma}_{j}^{+}+\hat{\sigma}_{j}^{-}\right)
\end{align*}

